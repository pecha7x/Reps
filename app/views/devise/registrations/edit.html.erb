<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <div class="well">
        <h2>Dashboard <%= current_user.nickname %> <%= link_to "Remove my profile", registration_path(resource_name), :class => "btn btn-danger btn-xs", :data => { :confirm => "Are you sure?" }, :method => :delete %></h2>
        <br>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal", :role => "form", :multipart => true }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <label for="inputEmail1" class="col-lg-2 control-label"><%= f.label :email %></label>
            <div class="col-lg-8">
              <%= f.email_field :email, :autofocus => true, :type => "email", :class => "form-control", :id => "inputEmail1"%>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <label for="inputText" class="col-lg-2 control-label"><%= f.label :name %></label>
            <div class="col-lg-8">
              <%= f.text_field :nickname, :type => "text", :class => "form-control"%>
            </div>
          </div>

          <div class="form-group">
            <label for="inputTimeZone" class="col-lg-2 control-label">Time Zone</label>
            <div class="col-lg-8">
              <%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.us_zones)%>
            </div>
          </div>

          <div class="form-group">
            <label for="inputPassword1" class="col-lg-2 control-label">Current password</label>
            <div class="col-lg-8">
              <%= f.password_field :current_password, :type => "password", :class => "form-control", :id => "inputPassword1"%>
            </div>
          </div>
          <div class="pass_change">
            <div class="form-group">
              <label for="inputPassword1" class="col-lg-2 control-label">A new password</label>
              <div class="col-lg-8">
                <%= f.password_field :password, :type => "password", :class => "form-control", :id => "inputPassword1"%>
              </div>
            </div>

            <div class="form-group">
              <label for="inputPassword1" class="col-lg-2 control-label">Repeat a new password</label>
              <div class="col-lg-8">
                <%= f.password_field :password_confirmation, :type => "password", :class => "form-control", :id => "inputPassword1"%>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-offset-9 col-lg-9">
              <div><%= f.submit "Update", :class => "btn btn-success" %></div>
            </div>
          </div>
        <% end %>
        <p><%= link_to "Back", :back, :class => "btn btn-primary btn-xs" %></p>
      </div>
    </div>
  </div>
</div>