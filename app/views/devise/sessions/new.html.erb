<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <div class="well">
        <h2>Sign in</h2>

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal", :role => "form"}) do |f| %>
          <div class="form-group">
            <label for="inputEmail1" class="col-lg-2 control-label"><%= f.label :email %></label>
            <div class="col-lg-10">
              <%= f.email_field :email, :autofocus => true, :type => "email", :class => "form-control", :id => "inputEmail1", :placeholder => "Your email address"%>
            </div>
          </div>

          <div class="form-group">
            <label for="inputPassword1" class="col-lg-2 control-label"><%= f.label :password %></label>
            <div class="col-lg-10">
              <%= f.password_field :password, :type => "password", :class => "form-control", :id => "inputPassword1", :placeholder => "Your password"%>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <div class="col-lg-offset-2 col-lg-10">
                <div class="checkbox">
                  <%= f.check_box :remember_me, :type => "checkbox" %>
                  <label>Remember me</label>
                </div>
              </div>
            </div>
          <% end -%>

          <div class="form-group">
            <div class="col-lg-offset-9 col-lg-10">
              <div><%= f.submit "Sign in", :class => "btn btn-success" %></div>
            </div>
          </div>
        <% end %>
        <div class="col-lg-offset-2">
          <%= link_to "Registration", new_registration_path(resource_name), :class => "btn btn-primary btn-sm" %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
